<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base for other styles -->
    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="{StaticResource FlatUIGrayBrush}" />
    </Style>

    <Style TargetType="{x:Type FrameworkElement}" x:Key="FrameworkBaseStyle">
        <Setter Property="TextElement.FontSize" Value="15" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource FlatUIGrayBrush}" />
    </Style>
</ResourceDictionary>